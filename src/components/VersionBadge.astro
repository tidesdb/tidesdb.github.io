---
// Fetch the latest release version from GitHub API at build time
let version = 'v1.3.1'; // Default to latest known version
let releaseUrl = 'https://github.com/tidesdb/tidesdb/releases';

try {
  const response = await fetch('https://api.github.com/repos/tidesdb/tidesdb/releases/latest');
  if (response.ok) {
    const data = await response.json();
    version = data.tag_name || version;
    releaseUrl = data.html_url || releaseUrl;
    console.log('Successfully fetched TidesDB version:', version);
  } else {
    console.warn('GitHub API returned non-OK status:', response.status, response.statusText);
  }
} catch (error) {
  console.warn('Failed to fetch TidesDB version from GitHub API, using default:', error.message);
}
---

<div class="version-section">
  <a href={releaseUrl} class="version-badge" target="_blank" rel="noopener noreferrer">
  <span class="version-label">Latest Release</span>
  <span class="version-number">{version}</span>
</a>
</div>

<style>
  .version-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    z-index: 1000;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #193EDC 0%, #1534b8 100%);
    color: white !important;
    text-decoration: none;
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    transition: all 0.2s ease;
    box-shadow: 0 2px 8px rgba(25, 62, 220, 0.3);
    margin: 1rem 0;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .version-badge:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(25, 62, 220, 0.4);
    background: linear-gradient(135deg, #1534b8 0%, #193EDC 100%);
    color: white !important;
  }

  .version-label,
  .version-number {
    color: white !important;
  }

  .version-label {
    opacity: 0.95;
  }

  .version-number {
    font-family: 'Courier New', monospace;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.25rem 0.5rem;
   border-radius: 100px;
    font-weight: 700;
  }
</style>